<UserControl x:Class="Oscillators.PendulumSimulator.Info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Oscillators.PendulumSimulator"
             xmlns:math="clr-namespace:WpfMath.Controls;assembly=WpfMath"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="20" FontFamily="Cambria">A nice and understandful explanation of the following formulae</TextBlock>
        <math:FormulaControl HorizontalAlignment="Center" Formula="x=A\cdot\sin(\alpha t+\delta)"/>
        <math:FormulaControl HorizontalAlignment="Center" Formula="y=B\cdot\sin(\beta t)"/>
    </StackPanel>
</UserControl>
