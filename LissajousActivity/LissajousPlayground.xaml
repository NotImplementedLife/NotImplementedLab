<UserControl x:Class="LissajousActivity.LissajousPlayground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LissajousActivity"
             xmlns:controls="clr-namespace:NotImplementedLab.Controls;assembly=NotImplementedLab"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Viewbox>
            <controls:Graph x:Name="Graph" Width="300" Height="300"/>
        </Viewbox>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="A=" HorizontalAlignment="Right"></TextBlock>
            <controls:NumberSelector Name="InputA" Minimum="0" Maximum="150" Grid.Row="0" Grid.Column="1" Margin="2"
                                     ValueChanged="InputA_ValueChanged"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="B=" HorizontalAlignment="Right"></TextBlock>
            <controls:NumberSelector Name="InputB" Minimum="0" Maximum="150" Grid.Row="1" Grid.Column="1" Margin="2"
                                     ValueChanged="InputB_ValueChanged"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="α=" HorizontalAlignment="Right"></TextBlock>
            <controls:NumberSelector Name="Inputa" Minimum="0" Maximum="150" Grid.Row="2" Grid.Column="1" Margin="2"
                                     ValueChanged="Inputa_ValueChanged_1"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="β=" HorizontalAlignment="Right"></TextBlock>
            <controls:NumberSelector Name="Inputb" Minimum="0" Maximum="150" Grid.Row="3" Grid.Column="1" Margin="2"
                                     ValueChanged="Inputb_ValueChanged_1"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="δ=" HorizontalAlignment="Right"></TextBlock>
            <controls:NumberSelector Name="Inputd" Minimum="0" Maximum="150" Grid.Row="4" Grid.Column="1" Margin="2"
                                     ValueChanged="Inputd_ValueChanged"/>
        </Grid>
    </Grid>
</UserControl>
