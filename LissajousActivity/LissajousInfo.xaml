<UserControl x:Class="LissajousActivity.LissajousInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LissajousActivity"
             xmlns:math="clr-namespace:WpfMath.Controls;assembly=WpfMath"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <StackPanel Margin="13">
        <TextBlock FontSize="20" FontFamily="Cambria">Lissajous curves generated by the parametric equations</TextBlock>
        <math:FormulaControl HorizontalAlignment="Center" Formula="x(t)=A\cdot\sin(\alpha t+\delta)"/>
        <math:FormulaControl HorizontalAlignment="Center" Formula="y(t)=B\cdot\sin(\beta t)"/>
        <TextBlock FontSize="20" FontFamily="Cambria">The user is invited to explore what happens for various values of A, B, α, β, δ.</TextBlock>
    </StackPanel>
</UserControl>
