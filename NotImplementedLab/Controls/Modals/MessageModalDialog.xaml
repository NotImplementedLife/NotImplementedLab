<local:ModalDialogBase x:Class="NotImplementedLab.Controls.Modals.MessageModalDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotImplementedLab.Controls.Modals"
             mc:Ignorable="d" 
             Background="White">
    <Grid Margin="40 15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="TextBlock" Grid.Row="0" Text="Nevermind." Margin="10 10 10 20" TextAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="OkButton" Grid.Row="1" Content="Ok" Width="55" Height="22" Click="OkButton_Click"/>
    </Grid>
</local:ModalDialogBase>
